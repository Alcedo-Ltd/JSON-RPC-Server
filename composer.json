{
  "name": "alcedo/json-rpc-server",
  "description": "JSON-RPC server for executing functions remotely.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Kiril Savchev",
      "email": "k.savchev@gmail.com",
      "homepage": "https://alcedo.bg"
    }
  ],
  "require": {
    "php": ">=8.2",
    "psr/http-message": "^2.0",
    "psr/container": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Alcedo\\JsonRpc\\Server\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alcedo\\Tests\\JsonRpc\\Server\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "squizlabs/php_codesniffer": "^4.0",
    "phpmd/phpmd": "^2.15",
    "phpdocumentor/phpdocumentor": "^3.8"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "tests": "vendor/bin/phpunit ./tests",
    "phpcs": "vendor/bin/phpcs",
    "phpmd": "vendor/bin/phpmd ./src text phpmd.xml",
    "phpdoc": "vendor/bin/phpdoc run -d ./src -t ./docs"
  }
}
